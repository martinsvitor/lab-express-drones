<h2>Create a new drone</h2>

<div id="container">
    <form action="/drones/create" method="post">
    <label for="name">
        <input type="text" name="name" placeholder="Name of the drone">
    </label>
    <label for="propellers">
        <input type="number" name="propellers">
    </label>
    <label for="maxSpeed">
        <input type="number" name="maxSpeed">
    </label>
    <button type="submit">Add the drone</button>
    </form>
</div>